<div class="row">
  <div class="col-md-6">
    <h1>Todos completados</h1>
    <% @todos.each do |todo| %>
      <% if todo.completed? %>
        <%= todo.description%>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h1>Todos NO completados</h1>
    <% @todos.each do |todo| %>
      <% if !todo.completed? %>
        <%= todo.description%>
      <% end %>
    <% end %>
  </div>
</div>
